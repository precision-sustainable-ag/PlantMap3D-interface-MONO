<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OakdResearchInterface" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mid_gray</item>
        <item name="colorPrimaryVariant">@color/mid_gray</item>
        <item name="colorOnPrimary">@color/off_white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/off_white</item>
        <item name="colorSecondaryVariant">@color/off_white</item>
        <item name="colorOnSecondary">@color/dark_gray</item>

        <!-- Specific colors -->
        <item name="android:statusBarColor" >?attr/colorSecondary</item>
        <item name="android:textColor" >@color/off_white</item>
        <item name="android:background" >@color/dark_gray</item>
    </style>

    <style name="Theme.OakdResearchInterface.NoActionBar" parent="Theme.OakdResearchInterface">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>